---
import Card from "../components/cardopinion.astro";
import Layout from "../components/Layout.astro";
import Heading from "../components/section-heading.astro";

const articles = await Astro.glob("./articles_opinio/*.md");
articles.reverse();
---

<Layout pageTitle="Articles d'opinió">
	<div class="heading-container">
		<Heading nom="Articles d'opinió" />
	</div>

	<div class="Cards">
		{
			articles.map((article) => (
				<Card
					imatge={article.frontmatter.image}
					data={article.frontmatter.date}
                    autor={article.frontmatter.author}
					titol={article.frontmatter.title}
					resum_article={article.frontmatter.description}
					link={article.url!}
				/>
			))
		}
	</div>

	<style>
		.heading-container {
			display: flex;
			justify-content: center;
			align-items: center;
			margin-top: 24px;
            margin-bottom: 24px;
		}

		.Cards {
			display: flex;
			align-items: flex-start;
			justify-content: center;
			flex-wrap: wrap;
			gap: 30px;
		}
	</style>
</Layout>
