---
interface Props {
    pageTitle?: string;
}
const { pageTitle } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link
            rel="stylesheet"
            href="https://use.fontawesome.com/releases/v5.1.0/css/all.css"
            integrity="sha384-lKuwvrZot6UHsBSfcMvOkWwlCMgc0TaWr+30HWe3a4ltaBwTZhyTEggF5tJv8tbt"
            crossorigin="anonymous"
        />
        <link
            href="https://fonts.googleapis.com/css?family=Roboto|Roboto+Condensed|Roboto+Slab"
            rel="stylesheet"
        />
        <title>Junts per Masquefa | {pageTitle}</title>
    </head>

    <!-- NAVEGADOR QUAN LA PANTALLA ÉS PETITA -->
    <div id="barra_lateral">
        <ul>
            <li>
                <a href="../pages/index.astro">Inici</a>
            </li>
            <li>
                <a href="../pages/noticies.astro">Notícies</a>
            </li>
            <li>
                <a href="">Articles d'opinió</a>
            </li>
            <li>
                <a href="">Cronologia</a>
            </li>
            <li>
                <a href="">El nostre equip</a>
            </li>
        </ul>
    </div>

    <nav>
        <div id="logo-img">
            <a href="../pages/index.astro">
                <img src="../../public/logo.png" alt="Logo JUNTS PER MASQUEFA">
            </a>
        </div>

        <!-- NAVEGADOR QUAN LA PANTALLA ÉS PETITA -->
        <div id="icono_barra_lateral">
            <i class="fas fa-bars"></i>
        </div>
        
        <!-- NAVEGADOR PREDETERMINAT -->
        <ul>
            <li>
                <a class="active" href="../pages/index.astro">Inici</a>
            </li>
            <li>
                <a href="../pages/noticies.astro">Notícies</a>
            </li>
            <li>
                <a href="">Articles d'opinió</a>
            </li>
            <li>
                <a href="">Cronologia</a>
            </li>
            <li>
                <a href="">Equip</a>
            </li>
        </ul>
    </nav>


    <body>
        <slot />
    </body>

    <style is:global>
        :root {
            --colorJunts: #00C3B2;
            --colorJuntsLila: #cc5a98;
            --colorFosc: #0b1722;
            --colorGrisClar: #e6e6e6;
            --colorBlanc: #ffffff;
        }

        body {
            margin: 0px 50px;
        }

        h1 {
            font-family: "Roboto", sans-serif;
            font-size: 42px;
            font-weight: bold;
        }

        h2 {
            font-family: "Roboto", sans-serif;
            font-size: 32px;
            font-weight: bold;
        }

        h3 {
            font-family: "Roboto", sans-serif;
            font-size: 24px;
            font-weight: bold;
        }

        h4 {
            font-family: "Roboto", sans-serif;
            font-size: 18px;
            font-weight: bold;
        }

        h5 {
            font-family: "Roboto", sans-serif;
            font-size: 14px;
            font-weight: 400; /* SemiBold */
        }

        p {
            font-family: "Roboto", sans-serif;
            font-size: 18px;
            font-weight: normal;
            line-height: 1.5;
            text-align: justify;
        }

        main {
            margin: 0 auto;
        }

        a {
            font-family: "Roboto", sans-serif;
            text-decoration: none;
            color: black;
        }
    </style>
</html>
