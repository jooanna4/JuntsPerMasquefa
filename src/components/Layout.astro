---
interface Props {
  pageTitle?: string;
}
const { pageTitle } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link
      href="https://fonts.googleapis.com/css?family=Roboto|Roboto+Condensed|Roboto+Slab"
      rel="stylesheet"
    />
    <title>Junts per Masquefa | {pageTitle}</title>
  </head>

  <nav>
    <div id="logo-img">
      <a href="/">
        <img src="../../public/logo.png" alt="Logo JUNTS PER MASQUEFA" />
      </a>
    </div>

    <!-- NAVEGADOR PREDETERMINAT -->
    <ul>
      <li>
        <a href="/">Inici</a>
      </li>
      <li>
        <a href="/noticies">Notícies</a>
      </li>
      <li>
        <a href="/articles_opinio">Articles d'opinió</a>
      </li>
      <li>
        <a href="">Cronologia</a>
      </li>
      <li>
        <a href="">Equip</a>
      </li>
    </ul>
  </nav>
  
  <body>
    <slot />
  </body>

  <footer>
    <a href="https://www.facebook.com" target="_blank">   <!-- target = com s'obrirà la pestanya al navegador, _blank és que s'obrirà en una pestanya nova -->
      <i class="fab fa-facebook"></i>
    </a>
    <a href="https://www.instagram.com" target="_blank">
      <i class="fab fa-instagram"></i>
    </a>
  </footer>

  <style is:global>
    :root {
      --colorJunts: #00c3b2;
      --colorJuntsLila: #cc5a98;
      --colorFosc: #0b1722;
      --colorGrisClar: #e6e6e6;
      --colorBlanc: #ffffff;
    }

    

    body {
      margin: 0px 60px;
      margin-top: 120px;
    }

    h1 {
      font-family: "Roboto", sans-serif;
      font-size: 42px;
      font-weight: bold;
      text-align: justify;
    }

    h2 {
      font-family: "Roboto", sans-serif;
      font-size: 32px;
      font-weight: bold;
      text-align: justify;
    }

    h3 {
      font-family: "Roboto", sans-serif;
      font-size: 24px;
      font-weight: bold;
      text-align: justify;
    }

    h4 {
      font-family: "Roboto", sans-serif;
      font-size: 18px;
      font-weight: bold;
    }

    h5 {
      font-family: "Roboto", sans-serif;
      font-size: 14px;
      font-weight: 400; /* SemiBold */
      color: var(--colorJuntsLila);
    }

    p {
      font-family: "Roboto", sans-serif;
      font-size: 18px;
      font-weight: normal;
      line-height: 1.5;
      text-align: justify;
    }

    main {
      margin: 0 auto;
    }

    a {
      font-family: "Roboto", sans-serif;
      text-decoration: none;
      color: black;
    }

    blockquote {
      font-style: italic;        /* Cambia la fuente a cursiva */
      background-color: var(--colorGrisClar); /* Añade un color de fondo suave */
      border-left: 4px solid var(--colorJuntsLila); /* Añade una barra a la izquierda */
      padding: 6px 20px;         /* Añade espacio interno */
      margin: 8px 0;             /* Añade espacio externo */
      color: var(--colorFosc);                /* Cambia el color del texto */
    }

    /* Navigation */

    nav {
      top: 0;
      left: 0;
      position: fixed;
      width: 100%;
      padding: 8px 0px;
      justify-content: space-between;
      align-items: center;
      background: var(--colorBlanc);
      display: flex;
      box-sizing: border-box;
      z-index: 100;

      font-family: "Roboto", sans-serif;
      font-size: 16px;
      font-style: normal;

      box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25);
    }

    nav a {
      padding: 0 32px;
      color: var(--colorJunts);
      text-transform: uppercase;
      font-weight: 500;
      transition: 0.4s;
    }

    nav a:hover {
      text-decoration: none;
      color: var(--colorJuntsLila);
      font-weight: 900;
    }

    nav ul {
      display: flex;
      list-style: none;
      justify-content: space-around;
      align-items: flex-start;
      height: 100%;
      margin: 0;
    }

    .active {
      color: var(--colorJuntsLila);
      font-weight: 900;
    }

    #icono_barra_lateral {
      height: 100%;
      font-size: 28px;
      padding: 0 32px;
      color: var(--colorJunts);
      display: none;
      align-items: center;
    }

    #icono_barra_lateral :hover {
      cursor: pointer;
    }

    /* Barra lateral */

    #barra_lateral {
      display: none;
      background: var(--colorJuntsLila);
      z-index: 100;
      position: fixed;
      transition: 0.4s;
      margin-top: 96px;
      width: 100%;
      text-align: right;
      opacity: 0;
      pointer-events: none;
    }

    #barra_lateral ul {
      list-style: none;
      padding: 0 32px;
    }

    #barra_lateral ul li {
      padding: 8px;
    }

    #barra_lateral a {
      font-family: "Roboto", sans-serif;
      font-size: 16px;
      text-transform: uppercase;
      color: white;
    }

    #logo-img {
    display: flex;
    padding: 0px;
    align-items: center;
    transition: 0.4s;
    }

    #logo-img img {
    height: 80px;
    width: 80px;
    }

    /*  FOOTER  */
    footer {
      left: 0;
      bottom: 0;
      display: flex;
      background-color: var(--colorFosc);
      color: white;
      padding: 40px 0;
      margin-top: 20px;
      justify-content: center;
      align-items: center;
      gap: 20px;
      margin-left: -60px;
      margin-right: -60px;
    }

    footer a {
      color: var(--colorBlanc);
      font-size: 24px;
    }

    footer a:hover {
      color: var(--colorJunts);
    }
  </style>
</html>
